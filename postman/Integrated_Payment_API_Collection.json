{
    "info": {
        "name": "Integrated Payment API Collection",
        "description": "Comprehensive collection for testing the integrated payment system combining Payment, Refund, and Installment functionality",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "version": "1.0.0"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{authToken}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api",
            "type": "string"
        },
        {
            "key": "authToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "schoolId",
            "value": "1",
            "type": "string"
        },
        {
            "key": "paymentId",
            "value": "",
            "type": "string"
        },
        {
            "key": "installmentId",
            "value": "",
            "type": "string"
        },
        {
            "key": "refundId",
            "value": "",
            "type": "string"
        },
        {
            "key": "studentId",
            "value": "1",
            "type": "string"
        },
        {
            "key": "parentId",
            "value": "1",
            "type": "string"
        },
        {
            "key": "feeStructureId",
            "value": "1",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@school.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "login"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.data.token) {",
                                    "        pm.collectionVariables.set('authToken', response.data.token);",
                                    "        pm.collectionVariables.set('schoolId', response.data.user.schoolId || '1');",
                                    "        console.log('Token saved:', response.data.token);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Integrated Payment Operations",
            "item": [
                {
                    "name": "Create Payment with Installments",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"payment\": {\n    \"amount\": 1200.00,\n    \"discount\": 100.00,\n    \"fine\": 0.00,\n    \"total\": 1100.00,\n    \"paymentDate\": \"2024-01-15T10:00:00Z\",\n    \"dueDate\": \"2024-01-20T23:59:59Z\",\n    \"status\": \"PENDING\",\n    \"method\": \"CARD\",\n    \"type\": \"TUITION_FEE\",\n    \"gateway\": \"STRIPE\",\n    \"transactionId\": \"TXN123456789\",\n    \"remarks\": \"Tuition fee payment with installments\",\n    \"studentId\": {{studentId}},\n    \"parentId\": {{parentId}},\n    \"feeStructureId\": {{feeStructureId}}\n  },\n  \"installments\": [\n    {\n      \"installmentNumber\": 1,\n      \"amount\": 275.00,\n      \"dueDate\": \"2024-02-15T23:59:59Z\",\n      \"status\": \"PENDING\",\n      \"remarks\": \"First installment\"\n    },\n    {\n      \"installmentNumber\": 2,\n      \"amount\": 275.00,\n      \"dueDate\": \"2024-03-15T23:59:59Z\",\n      \"status\": \"PENDING\",\n      \"remarks\": \"Second installment\"\n    },\n    {\n      \"installmentNumber\": 3,\n      \"amount\": 275.00,\n      \"dueDate\": \"2024-04-15T23:59:59Z\",\n      \"status\": \"PENDING\",\n      \"remarks\": \"Third installment\"\n    },\n    {\n      \"installmentNumber\": 4,\n      \"amount\": 275.00,\n      \"dueDate\": \"2024-05-15T23:59:59Z\",\n      \"status\": \"PENDING\",\n      \"remarks\": \"Fourth installment\"\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/create-with-installments",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "create-with-installments"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.data.payment.id) {",
                                    "        pm.collectionVariables.set('paymentId', response.data.payment.id.toString());",
                                    "        if (response.data.installments && response.data.installments.length > 0) {",
                                    "            pm.collectionVariables.set('installmentId', response.data.installments[0].id.toString());",
                                    "        }",
                                    "        console.log('Payment created with ID:', response.data.payment.id);",
                                    "        console.log('Installments created:', response.data.installments.length);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Get Complete Payment Details",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/{{paymentId}}/complete-details",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "{{paymentId}}", "complete-details"]
                        }
                    }
                },
                {
                    "name": "Process Refund",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"amount\": 100.00,\n  \"reason\": \"Student withdrawal\",\n  \"remarks\": \"Partial refund due to student withdrawal\",\n  \"method\": \"BANK_TRANSFER\",\n  \"status\": \"PROCESSING\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/{{paymentId}}/refund",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "{{paymentId}}", "refund"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.data.id) {",
                                    "        pm.collectionVariables.set('refundId', response.data.id.toString());",
                                    "        console.log('Refund created with ID:', response.data.id);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Pay Installment",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"remarks\": \"Payment received via bank transfer\",\n  \"paymentMethod\": \"BANK_TRANSFER\",\n  \"transactionId\": \"TXN987654321\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/installments/{{installmentId}}/pay",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "installments", "{{installmentId}}", "pay"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Analytics & Dashboard",
            "item": [
                {
                    "name": "Get Payment Analytics",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/analytics?startDate=2024-01-01&endDate=2024-12-31",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "analytics"],
                            "query": [
                                {
                                    "key": "startDate",
                                    "value": "2024-01-01"
                                },
                                {
                                    "key": "endDate",
                                    "value": "2024-12-31"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Payment Dashboard",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/dashboard",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "dashboard"]
                        }
                    }
                },
                {
                    "name": "Generate Payment Report (JSON)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/report/generate?startDate=2024-01-01&endDate=2024-12-31&format=json",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "report", "generate"],
                            "query": [
                                {
                                    "key": "startDate",
                                    "value": "2024-01-01"
                                },
                                {
                                    "key": "endDate",
                                    "value": "2024-12-31"
                                },
                                {
                                    "key": "format",
                                    "value": "json"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Generate Payment Report (CSV)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/report/generate?startDate=2024-01-01&endDate=2024-12-31&format=csv",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "report", "generate"],
                            "query": [
                                {
                                    "key": "startDate",
                                    "value": "2024-01-01"
                                },
                                {
                                    "key": "endDate",
                                    "value": "2024-12-31"
                                },
                                {
                                    "key": "format",
                                    "value": "csv"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Bulk Operations",
            "item": [
                {
                    "name": "Bulk Create Payments",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"operation\": \"create_payments\",\n  \"data\": {\n    \"payments\": [\n      {\n        \"amount\": 500.00,\n        \"discount\": 50.00,\n        \"fine\": 0.00,\n        \"total\": 450.00,\n        \"paymentDate\": \"2024-01-15T10:00:00Z\",\n        \"dueDate\": \"2024-01-20T23:59:59Z\",\n        \"status\": \"PENDING\",\n        \"method\": \"CASH\",\n        \"type\": \"TRANSPORT_FEE\",\n        \"remarks\": \"Transport fee payment\",\n        \"studentId\": {{studentId}},\n        \"parentId\": {{parentId}},\n        \"feeStructureId\": {{feeStructureId}}\n      },\n      {\n        \"amount\": 300.00,\n        \"discount\": 0.00,\n        \"fine\": 0.00,\n        \"total\": 300.00,\n        \"paymentDate\": \"2024-01-16T10:00:00Z\",\n        \"dueDate\": \"2024-01-25T23:59:59Z\",\n        \"status\": \"PENDING\",\n        \"method\": \"BANK_TRANSFER\",\n        \"type\": \"LIBRARY_FEE\",\n        \"remarks\": \"Library fee payment\",\n        \"studentId\": {{studentId}},\n        \"parentId\": {{parentId}},\n        \"feeStructureId\": {{feeStructureId}}\n      }\n    ]\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/bulk-operations",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "bulk-operations"]
                        }
                    }
                },
                {
