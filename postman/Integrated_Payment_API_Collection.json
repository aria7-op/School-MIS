                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"operation\": \"create_installments\",\n  \"data\": {\n    \"installments\": [\n      {\n        \"paymentId\": {{paymentId}},\n        \"installmentNumber\": 5,\n        \"amount\": 200.00,\n        \"dueDate\": \"2024-06-15T23:59:59Z\",\n        \"status\": \"PENDING\",\n        \"remarks\": \"Additional installment\"\n      },\n      {\n        \"paymentId\": {{paymentId}},\n        \"installmentNumber\": 6,\n        \"amount\": 200.00,\n        \"dueDate\": \"2024-07-15T23:59:59Z\",\n        \"status\": \"PENDING\",\n        \"remarks\": \"Final installment\"\n      }\n    ]\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/bulk-operations",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "bulk-operations"]
                        }
                    }
                },
                {
                    "name": "Bulk Update Payment Status",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"operation\": \"update_status\",\n  \"data\": {\n    \"paymentIds\": [1, 2, 3],\n    \"status\": \"PAID\"\n  }\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/integrated-payments/bulk-operations",
                            "host": ["{{baseUrl}}"],
                            "path": ["integrated-payments", "bulk-operations"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Test Data Setup",
            "item": [
