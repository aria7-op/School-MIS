                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.data.id) {",
                                    "        pm.collectionVariables.set('messageId', response.data.id.toString());",
