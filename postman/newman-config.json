{
  "collection": "./Class_Management_API.postman_collection.json",
  "environment": "./Class_Management_API_Environment.postman_environment.json",
  "iterations": 1,
  "delay": 100,
  "timeout": 10000,
  "timeoutRequest": 5000,
  "timeoutScript": 5000,
  "bail": false,
  "ignoreRedirects": false,
  "insecure": false,
  "reporters": ["cli", "json", "html"],
  "reporter": {
    "cli": {
      "noColor": false,
      "noSummary": false,
      "noFailures": false,
      "noAssertions": false,
      "noConsole": false
    },
    "json": {
      "export": "./results/newman-results.json"
    },
    "html": {
      "export": "./results/newman-report.html",
      "template": "./templates/custom-template.hbs"
    }
  },
  "globalVar": {
    "baseUrl": "http://localhost:3000/api",
    "authToken": "your_jwt_token_here"
  },
  "globalHeaders": {
    "Accept": "application/json",
    "Content-Type": "application/json"
  }
} 