{
    "info": {
        "name": "Installment API Collection",
        "description": "Comprehensive collection for testing all installment endpoints including CRUD operations, payment management, statistics, and dashboard features",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "version": "1.0.0"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{authToken}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000/api",
            "type": "string"
        },
        {
            "key": "authToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "schoolId",
            "value": "1",
            "type": "string"
        },
        {
            "key": "installmentId",
            "value": "",
            "type": "string"
        },
        {
            "key": "paymentId",
            "value": "1",
            "type": "string"
        },
        {
            "key": "studentId",
            "value": "1",
            "type": "string"
        },
        {
            "key": "parentId",
            "value": "1",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@school.com\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/auth/login",
                            "host": ["{{baseUrl}}"],
                            "path": ["auth", "login"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.data.token) {",
                                    "        pm.collectionVariables.set('authToken', response.data.token);",
                                    "        pm.collectionVariables.set('schoolId', response.data.user.schoolId || '1');",
                                    "        console.log('Token saved:', response.data.token);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Installment CRUD Operations",
            "item": [
                {
                    "name": "Create Installment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"paymentId\": {{paymentId}},\n  \"installmentNumber\": 1,\n  \"amount\": 150.00,\n  \"dueDate\": \"2024-02-15T23:59:59Z\",\n  \"status\": \"PENDING\",\n  \"lateFee\": 0.00,\n  \"remarks\": \"First installment for tuition fee\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/installments",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.data.id) {",
                                    "        pm.collectionVariables.set('installmentId', response.data.id.toString());",
                                    "        console.log('Installment created with ID:', response.data.id);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Get All Installments",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments?page=1&limit=10&status=PENDING&startDate=2024-01-01&endDate=2024-12-31&minAmount=100&maxAmount=500&sortBy=dueDate&sortOrder=asc",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "status",
                                    "value": "PENDING"
                                },
                                {
                                    "key": "startDate",
                                    "value": "2024-01-01"
                                },
                                {
                                    "key": "endDate",
                                    "value": "2024-12-31"
                                },
                                {
                                    "key": "minAmount",
                                    "value": "100"
                                },
                                {
                                    "key": "maxAmount",
                                    "value": "500"
                                },
                                {
                                    "key": "sortBy",
                                    "value": "dueDate"
                                },
                                {
                                    "key": "sortOrder",
                                    "value": "asc"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Installment by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments/{{installmentId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "{{installmentId}}"]
                        }
                    }
                },
                {
                    "name": "Update Installment",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"amount\": 160.00,\n  \"dueDate\": \"2024-02-20T23:59:59Z\",\n  \"remarks\": \"Updated installment details\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/installments/{{installmentId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "{{installmentId}}"]
                        }
                    }
                },
                {
                    "name": "Delete Installment",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments/{{installmentId}}",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "{{installmentId}}"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Payment Management",
            "item": [
                {
                    "name": "Mark Installment as Paid",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"remarks\": \"Payment received via bank transfer\",\n  \"paymentMethod\": \"BANK_TRANSFER\",\n  \"transactionId\": \"TXN123456789\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/installments/{{installmentId}}/pay",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "{{installmentId}}", "pay"]
                        }
                    }
                },
                {
                    "name": "Mark Installment as Overdue",
                    "request": {
                        "method": "PATCH",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments/{{installmentId}}/overdue",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "{{installmentId}}", "overdue"]
                        }
                    }
                },
                {
                    "name": "Get Installments by Payment",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments/payment/{{paymentId}}?page=1&limit=10&sortBy=installmentNumber&sortOrder=asc",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "payment", "{{paymentId}}"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "sortBy",
                                    "value": "installmentNumber"
                                },
                                {
                                    "key": "sortOrder",
                                    "value": "asc"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Bulk Operations",
            "item": [
                {
                    "name": "Bulk Create Installments",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
