                            "raw": "{{baseUrl}}/installments/dashboard/summary",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "dashboard", "summary"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Search & Filtering",
            "item": [
                {
                    "name": "Search Installments",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments/search/tuition?page=1&limit=10&status=PENDING",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "search", "tuition"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "status",
                                    "value": "PENDING"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Overdue Installments",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments/overdue?page=1&limit=10",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "overdue"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Upcoming Installments",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments/upcoming?days=30",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "upcoming"],
                            "query": [
                                {
                                    "key": "days",
                                    "value": "30"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Test Data Setup",
            "item": [
