                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"paymentId\": {{paymentId}},\n  \"installmentNumber\": 1,\n  \"amount\": 300.00,\n  \"dueDate\": \"2024-03-15T23:59:59Z\",\n  \"status\": \"PENDING\",\n  \"remarks\": \"Test pending installment\"\n}"
                        },
