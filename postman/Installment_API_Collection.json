                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"installments\": [\n    {\n      \"paymentId\": {{paymentId}},\n      \"installmentNumber\": 1,\n      \"amount\": 200.00,\n      \"dueDate\": \"2024-02-15T23:59:59Z\",\n      \"status\": \"PENDING\",\n      \"remarks\": \"First installment\"\n    },\n    {\n      \"paymentId\": {{paymentId}},\n      \"installmentNumber\": 2,\n      \"amount\": 200.00,\n      \"dueDate\": \"2024-03-15T23:59:59Z\",\n      \"status\": \"PENDING\",\n      \"remarks\": \"Second installment\"\n    },\n    {\n      \"paymentId\": {{paymentId}},\n      \"installmentNumber\": 3,\n      \"amount\": 200.00,\n      \"dueDate\": \"2024-04-15T23:59:59Z\",\n      \"status\": \"PENDING\",\n      \"remarks\": \"Third installment\"\n    }\n  ]\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/installments/bulk/create",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "bulk", "create"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Analytics & Statistics",
            "item": [
                {
                    "name": "Get Installment Statistics",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/installments/statistics?startDate=2024-01-01&endDate=2024-12-31&status=PENDING",
                            "host": ["{{baseUrl}}"],
                            "path": ["installments", "statistics"],
                            "query": [
                                {
                                    "key": "startDate",
                                    "value": "2024-01-01"
                                },
                                {
                                    "key": "endDate",
                                    "value": "2024-12-31"
                                },
                                {
                                    "key": "status",
                                    "value": "PENDING"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Dashboard Summary",
                    "request": {
                        "method": "GET",
                        "header": [],
