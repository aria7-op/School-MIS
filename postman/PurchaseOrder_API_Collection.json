{
  "info": {
    "name": "PurchaseOrder API Collection",
    "description": "Comprehensive collection for testing all purchase order endpoints including CRUD operations, status management, bulk operations, and reporting",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "schoolId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "purchaseOrderId",
      "value": "",
      "type": "string"
    },
    {
      "key": "supplierId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@school.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.token) {",
                  "        pm.collectionVariables.set('authToken', response.data.token);",
                  "        pm.collectionVariables.set('schoolId', response.data.user.schoolId || '1');",
                  "        console.log('Token saved:', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "PurchaseOrder CRUD Operations",
      "item": [
        {
          "name": "Create Purchase Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"supplierId\": {{supplierId}},\n  \"orderDate\": \"2024-01-15T10:00:00Z\",\n  \"expectedDeliveryDate\": \"2024-01-25T23:59:59Z\",\n  \"status\": \"DRAFT\",\n  \"subtotal\": 1000.00,\n  \"taxAmount\": 100.00,\n  \"discountAmount\": 50.00,\n  \"totalAmount\": 1050.00,\n  \"currency\": \"USD\",\n  \"paymentTerms\": \"Net 30 days\",\n  \"deliveryAddress\": \"123 School Street, City, State 12345\",\n  \"notes\": \"Purchase order for classroom supplies\",\n  \"items\": [\n    {\n      \"itemId\": 1,\n      \"quantity\": 10,\n      \"unitPrice\": 50.00,\n      \"remarks\": \"Whiteboard markers\"\n    },\n    {\n      \"itemId\": 2,\n      \"quantity\": 5,\n      \"unitPrice\": 100.00,\n      \"remarks\": \"Projector bulbs\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/purchase-orders",
              "host": ["{{baseUrl}}"],
              "path": ["purchase-orders"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.id) {",
                  "        pm.collectionVariables.set('purchaseOrderId', response.data.id.toString());",
                  "        console.log('Purchase Order created with ID:', response.data.id);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get All Purchase Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/purchase-orders?page=1&limit=10&status=DRAFT&supplierId={{supplierId}}&startDate=2024-01-01&endDate=2024-12-31&minAmount=100&maxAmount=2000&search=supplies&sortBy=orderDate&sortOrder=desc",
              "host": ["{{baseUrl}}"],
              "path": ["purchase-orders"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "DRAFT"
                },
                {
                  "key": "supplierId",
                  "value": "{{supplierId}}"
                },
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                },
                {
                  "key": "minAmount",
                  "value": "100"
                },
                {
                  "key": "maxAmount",
                  "value": "2000"
                },
                {
                  "key": "search",
                  "value": "supplies"
                },
                {
                  "key": "sortBy",
                  "value": "orderDate"
                },
                {
                  "key": "sortOrder",
                  "value": "desc"
                }
              ]
            }
          }
