                            "path": ["events"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "isPublished",
                                    "value": "true"
                                },
                                {
                                    "key": "search",
                                    "value": "sports"
                                },
                                {
                                    "key": "sortBy",
                                    "value": "startDateTime"
                                },
                                {
                                    "key": "sortOrder",
                                    "value": "asc"
                                }
                            ]
