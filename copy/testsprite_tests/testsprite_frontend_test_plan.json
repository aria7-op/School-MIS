{
  "id": "attendance-tests-v1",
  "title": "Attendance Management System - Comprehensive Test Suite",
  "description": "Test suite for attendance management features including main attendance screen and teacher portal integration. Tests cover class selection, view modes, marking attendance, monthly matrix, and export functionality.",
  "steps": [
    {
      "id": "step-001",
      "description": "Navigate to attendance screen",
      "action": "navigate",
      "target": "/attendance"
    },
    {
      "id": "step-002",
      "description": "Wait for page to load",
      "action": "wait",
      "duration": 2000
    },
    {
      "id": "step-003",
      "description": "Verify attendance heading exists",
      "action": "verify",
      "selector": "text=/Attendance/i"
    },
    {
      "id": "step-004",
      "description": "Click first class button",
      "action": "click",
      "selector": "button"
    },
    {
      "id": "step-005",
      "description": "Wait for class data to load",
      "action": "wait",
      "duration": 3000
    },
    {
      "id": "step-006",
      "description": "Verify Monthly tab button exists",
      "action": "verify",
      "selector": "button:has-text('Monthly')"
    },
    {
      "id": "step-007",
      "description": "Click Monthly tab",
      "action": "click",
      "selector": "button:has-text('Monthly')"
    },
    {
      "id": "step-008",
      "description": "Wait for monthly view",
      "action": "wait",
      "duration": 2000
    },
    {
      "id": "step-009",
      "description": "Verify Excel export button",
      "action": "verify",
      "selector": "button:has-text('Excel')"
    },
    {
      "id": "step-010",
      "description": "Verify PDF export button",
      "action": "verify",
      "selector": "button:has-text('PDF')"
    },
    {
      "id": "step-011",
      "description": "Click Table tab",
      "action": "click",
      "selector": "button:has-text('Table')"
    },
    {
      "id": "step-012",
      "description": "Wait for table view",
      "action": "wait",
      "duration": 2000
    },
    {
      "id": "step-013",
      "description": "Verify table exists",
      "action": "verify",
      "selector": "table"
    }
  ]
}
