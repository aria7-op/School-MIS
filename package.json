{
  "name": "school-backend",
  "version": "1.0.0",
  "description": "School Management System Backend",
  "main": "app.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node --max-old-space-size=512 app.js",
    "dev": "nodemon app.js",
    "build": "esbuild app.js --bundle --platform=node --target=node24 --outfile=dist/bundle.js --external:bcrypt --external:mysql2 --external:prisma --external:@prisma/client --format=cjs",
    "build:prod": "npm run build && node scripts/create-production.js",
    "start:js-orm": "cd dist && node start-js-orm.js",
    "start:cpanel": "cd dist && node start-cpanel.js",
    "start:memory-optimized": "node --max-old-space-size=256 --max-semi-space-size=64 app.js"
  },
  "dependencies": {
    "@huggingface/inference": "^4.5.3",
    "@prisma/client": "^6.18.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "canvas": "^2.11.2",
    "cloudinary": "^2.7.0",
    "cohere-ai": "^7.18.0",
    "compression": "^1.7.4",
    "compromise": "^14.14.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.2.0",
    "googleapis": "^153.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "jimp": "^0.22.10",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "natural": "^8.1.0",
    "node-cache": "^5.1.2",
    "node-rsa": "^1.1.1",
    "nodemailer": "^6.9.0",
