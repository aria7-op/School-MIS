# ======================
# ENVIRONMENT
# ======================
NODE_ENV=development
PORT=4000

# ======================
# DATABASE CONFIGURATION
# ======================
# Use either DATABASE_URL or individual DB_* variables
# DATABASE_URL=mysql://username:password@host:port/database

# Individual database credentials (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=3306
DB_USER=school_app
DB_PASSWORD=your_secure_password_here
DB_NAME=school_mis

# Database SSL Configuration (optional)
DB_REQUIRE_SSL=false
DB_SSL_CA_PATH=
DB_SSL_REJECT_UNAUTHORIZED=true

# ======================
# JWT AUTHENTICATION
# ======================
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# ======================
# CORS Configuration
# ======================
# Comma-separated list of additional allowed origins
CORS_ALLOWED_ORIGINS=https://khwanzay.school,https://sms.ariadelta.af

# ======================
# CONTENT SECURITY POLICY
# ======================
CSP_FRAME_ANCESTORS='self'
CSP_REPORT_URI=
CSP_ALLOW_UNSAFE_INLINE_SCRIPT=false
CSP_ALLOW_UNSAFE_INLINE_STYLE=false
CSP_ADDITIONAL_SCRIPT_SRC=
CSP_ADDITIONAL_STYLE_SRC=
CSP_ADDITIONAL_IMG_SRC=
CSP_ADDITIONAL_FONT_SRC=
CSP_ADDITIONAL_CONNECT_SRC=

# ======================
# FILE UPLOAD CONFIGURATION
# ======================
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx,.zip,.rar,.txt
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,application/zip,application/vnd.rar,text/plain

# ======================
# FILE ENCRYPTION
# ======================
# Encryption key for sensitive file metadata (32 characters)
ENCRYPTION_KEY=your_encryption_key_32_characters

# ======================
# REDIS CACHE (Optional)
# ======================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379

# ======================
# EMAIL CONFIGURATION (Optional)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_NAME=School MIS
SMTP_FROM_EMAIL=noreply@school.local

# ======================
# GOOGLE SERVICES (Optional)
# ======================
GOOGLE_DRIVE_API_KEY=
GOOGLE_DRIVE_REFRESH_TOKEN=

# ======================
# LOGGING
# ======================
LOG_LEVEL=info
LOG_FORMAT=combined

# ======================
# SESSION CONFIGURATION
# ======================
SESSION_SECRET=your_session_secret_key_here

# ======================
# RATE LIMITING
# ======================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# PAGINATION
# ======================
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=500

# ======================
# FEATURE FLAGS
# ======================
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_AUDIT_LOGGING=true
ENABLE_EXCEL_EXPORT=true

# ======================
# STRIPE PAYMENT (Optional)
# ======================
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
